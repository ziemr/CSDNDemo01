<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 
    red #FF0000 
    yellow #FFFF00
    lightyellow #FFFFE0
    red2 #FF00FF
    lightgreen #90EE90
    #8FBC8F
    -->
    <View android:id="@+id/divider"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:layout_toLeftOf="@id/call_icon"
        android:layout_marginLeft="11dip"
        android:background="@drawable/divider_vertical_dark"
    />
    <ImageView android:id="@+id/img_caller_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/biz_navigation_tab_news_pressed" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/img_caller_icon"
        android:layout_toLeftOf="@id/divider"
        android:layout_marginTop="4dip"
        android:orientation="horizontal" >
        
        <TextView android:id="@+id/txt_data1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:textColor="@color/black2"
            android:textSize="22sp"
        />
        <TextView android:id="@+id/txt_data2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80dp"
            android:layout_weight="1"
            android:textColor="@color/datecolor"
            android:textSize="14sp"
        />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/img_caller_icon"
        android:layout_toLeftOf="@id/divider"
        android:orientation="horizontal" >
        
        <TextView android:id="@+id/txt_data3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            android:layout_weight="2"
            android:textColor="@color/black2"
            android:textSize="16sp"
        />
        <TextView android:id="@+id/txt_data4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="80dp"
            android:layout_weight="1"
            android:textColor="@color/datecolor"
            android:textSize="16sp"
        />
    </LinearLayout>
</merge>
